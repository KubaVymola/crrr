{
    "name": "crrr",
    "version": "0.0.3",
    "license": "MIT",
    "bin": {
        "crrr": "dist/crrr.js",
        "init_crrr": "dist/init_crrr.sh"
    },
    "type": "module",
    "engines": {
        "node": ">=16"
    },
    "scripts": {
        "build": "tsc && cp init_crrr.sh dist/",
        "dev_old": "tsc --watch",
        "dev": "yarn build && node dist/crrr.js",
        "code:fix": "prettier --write --no-editorconfig --log-level debug --config .prettierrc .",
        "test": "prettier --check . && xo && ava"
    },
    "files": [
        "dist"
    ],
    "dependencies": {
        "fuse.js": "^7.0.0",
        "ink": "^4.1.0",
        "ink-text-input": "^5.0.1",
        "meow": "^11.0.0",
        "react": "^18.2.0"
    },
    "devDependencies": {
        "@types/node": "^20.11.30",
        "@types/react": "^18.0.32",
        "ava": "^5.2.0",
        "chalk": "^5.2.0",
        "eslint-config-xo-react": "^0.27.0",
        "eslint-plugin-react": "^7.32.2",
        "eslint-plugin-react-hooks": "^4.6.0",
        "ink-testing-library": "^3.0.0",
        "prettier": "3.2.5",
        "ts-node": "^10.9.1",
        "typescript": "^5.0.3",
        "xo": "^0.53.1"
    },
    "ava": {
        "extensions": {
            "ts": "module",
            "tsx": "module"
        },
        "nodeArguments": [
            "--loader=ts-node/esm"
        ]
    },
    "xo": {
        "extends": "xo-react",
        "prettier": true,
        "rules": {
            "react/prop-types": "off"
        }
    }
}
